{
  "extends": [
    "next",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "React": "readonly"
  },
  "rules": {
    "react/no-unescaped-entities": "off",
    "@next/next/no-page-custom-font": "off",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": false,
        "trailingComma": "none",
        "tabWidth": 2,
        "endOfLine": "auto"
      }
    ],
    "no-unused-vars": "warn",
    "no-undef": "error",
    "no-console": "warn",
    "indent": [
      "error",
      2
    ],
    "comma-dangle": [
      "error",
      "never"
    ]
  }
}